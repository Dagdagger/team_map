<%= form_for @achievement, :url => { :controller => 'achievements', :action => 'create'} do |f|%>

<div class = "field">
	<%= f.label :name, "What do you name your achievement" %><br>
	<%= f.text_field :name %>
</div>
<br />

	<div class = "field">
		<%= f.label :description, "What's the achievement?" %> <br />
		<%= f.text_area :description %>
	</div>
	<br />

	<div class="actions">
		<%= f.submit 'Add!' %>
	</div>

	<% end %>

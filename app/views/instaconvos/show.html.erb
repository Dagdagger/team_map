<div class="chatboxhead">
  <div class="chatboxtitle">
    <i class="fa fa-comments"></i>


    <h1><%= @receiver.name %> </h1>
  </div>
  <div class="chatboxoptions">
    <%= link_to "<i class='fa fa-minus'></i>".html_safe, '#', class: "toggleChatBox", "data-cid" => @instaconvo.id %>
    &nbsp;&nbsp;
    <%= link_to "<i class='fa fa-times'></i> ".html_safe, "#", class: "closeChat", "data-cid" => @instaconvo.id %>
  </div>
  <br clear="all"/>
</div>
<div class="chatboxcontent">
  <% if @supamessages.any? %>
    <%= render @supamessages %>
    <% end %>
  </div>
  <div class="chatboxinput">
    <%= form_for([@instaconvo, @supamessage], :remote => true, :html => {id: "instaconvo_form_#{@instaconvo.id}"}) do |f| %>
    <%= f.text_area :body, class: "chatboxtextarea", "data-cid" => @instaconvo.id %>
    <% end %>
  </div>

  <%= subscribe_to instaconvo_path(@instaconvo) %>

<div class="page-header">
  <%= link_to events_url, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <h1>You're going!</h1>
</div>

<dl class="dl-horizontal">

  <dt>Name:</dt>
  <dd><%= @event.name %></dd>

  <dt>Address:</dt>
  <dd><%= @event.address %></dd>

  <dt>Wants to play</dt>
  <dd><%= @event.sport %></dd>

  <dt>Needs</dt>
  <dd><%= @event.need %></dd>

</dl>

<div class="page-header">
  <%= link_to events_url, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    See Events
  <% end %>
  <%= link_to edit_event_path(@event), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Event Created</h1>
</div>

<dl class="dl-horizontal">

  <dt>Name:</dt>
  <dd><%= @event.name %></dd>

  <dt>Address:</dt>
  <dd><%= @event.address %></dd>

  <dt>Wants to play</dt>
  <dd><%= @event.sport %></dd>

  <dt>Needs</dt>
  <dd><%= @event.need %></dd>

  <dt>Happening At </dt>
  <dd> <%= @event.time%></dd> 

</dl>

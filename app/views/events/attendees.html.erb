<div class="col-md-3">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">User list</h3>
    </div>
    <div class="panel-body">
      <ul>
        <% @attendees.each do |user| %>
          <li><%= link_to user.name,{:controller => "profiles", :action => "publicshow", :id => user.profile.id }   %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="col-md-3">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Send an Invite?</h3>
    </div>
    <div class="panel-body">
      <ul>
          <li><%= link_to 'Invite someone', {:controller => "invites", :action => "new" , :id => @event.id} %></li>
      </ul>
    </div>
  </div>
</div>

<div class="col-md-3">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Information</h3>
    </div>
    <div class="panel-body">
      <ul>
          <li>Name: <%= @event.name %></li>
          <li>Still needs: <%= @event.need %></li>
          <li>Address: <%= @event.address %></li>
          <li>Game: <%= @event.sport %></li>
          <li>Time: <%= @event.time %></li>
      </ul>
    </div>
  </div>
</div>

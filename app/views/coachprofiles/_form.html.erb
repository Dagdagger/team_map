<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
<%= form_for(@coachprofile, html: { class: "form-horizontal", role: "form" } ) do |f|%>

<div class = "field">
	<%= f.label :image, "Upload a Profile Picture" %><br>
	<%= f.file_field :image %>
</div>
<br />

<div class = "field">
	<%= f.label :firstname, "Enter your first name" %> <br />
	<%= f.text_field :firstname %>
</div>

<br />

<div class = "field">
	<%=f.label :lastname, "Enter your last name"%><br />
	<%= f.text_field :lastname %>
</div>

<br />

<div class = "field">
	<%= f.label :email, "Enter your contact email" %> <br />
	<%= f.text_field :email%>
</div>

<br />

<div class = "field">
	<%= f.label :address, "Enter an Address" %> <br />
	<%= f.text_field :address %>
</div>

<br />



<div class = "field">
	<%= f.label :phonenumber, "Enter a phone number if you like" %><br />
	<%= f.text_field :phonenumber %>
</div>

<br />

	<div class = "field">
		<%= f.label :price, "Price you're charging for your services" %><br />
		<%= f.select :price, [5, 10, 15, 20, 25, 30, 35, 40, 45, 50], :prompt => 'Select One'%>
	</div>

	<br />

	<div class = "field">
		<%= f.label :description, "Write something about yourself!" %><br />
		<%= f.text_area :description %>
	</div>

	<br />

	<div class = "field">
		<%= f.label :birthdate, "Birthdate" %><br />
		<%= f.date_select :birthdate, :start_year => 1950 %>
	</div>

	<br />
	<div class = "field">
		<%= f.label :sport, "Sport you teach" %><br />
		<%= f.text_field :sport %>
	</div>

	<br />


	<div class="actions">
		<%= f.submit 'Update!' %>
	</div>
</div>
</div>
</div>
	<% end %>

<center>
<%= form_tag charges_path do %>
	<article>
	 	<% if flash[:error].present? %>
			<div id="error_explanation">
				<p><%= flash[:error] %></p>
			</div>
		<% end %>
<p> You can contact your coach at <%= @coachprofile.email %> for any further questions </p>
	        <label class="amount">
			<span>Amount: <%= pretty_amount(@coachprofile.price * 100) %></span>
		</label>
	</article>
	 <%= hidden_field_tag 'coachprofile', @coachprofile.id %>

	<script src="https://checkout.stripe.com/checkout.js" class = "stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
		data-description="<%= @description %>"
		data-amount="<%= @amount %>"
		data-email="<%= current_user.email %>"
		data-locale="auto">
	</script>
<% end %>
</center>

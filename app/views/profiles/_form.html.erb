<%= form_for(@profile, html: { class: "form-horizontal", role: "form" } ) do |f|%>

<div class = "field">
	<%= f.label :image, "Upload a Profile Picture" %><br>
	<%= f.file_field :image %>
</div>
<br />

<div class = "field">
	<%= f.label :displayname, "Choose a displayname" %><br>
	<%= f.text_field :displayname %>
</div>
<br />


	<div class = "field">
		<%= f.label :description, "Write something about yourself!" %><br />
		<%= f.text_area :description %>
	</div>
	<br />

	<div class = "field">
		<%= f.label :birthdate, "Choose Birthdate" %> <br />
		<%= f.date_select :birthdate, :start_year => 1930 %>
	</div>
	<br />

	<div class = "field">
		<%= f.label :sport, "Main Sport" %> <br />
		<%= f.text_field :sport%>
		</div>
		<br />

	<div class = "field">
		<%= f.label :sportdescription, "Write Something about your preferred Sport" %><br />
		<%= f.text_area :sportdescription %>
		</div>
		<br />

		<div class = "field">
			<%= f.label :skill, "What is your skill level in this sport?" %><br />
			<%= f.select :skill, (0..10) %>
			</div>
		<br />

	<div class="actions">
		<%= f.submit 'Update!' %>
	</div>

	<% end %>
